<div class="row">
  <div class="col-md-6">
    <h1>Receitas do site</h1>
  </div>
    <div class="col-md-6">
      <ul class="nav nav-pills">
        <li class="active"><a href="#">Início</a></li>
        <li><a href="#">Minhas receitas</a></li>
        <li><a href="#">Cadastrar receita</a></li>
        <li><a href="#">Sair</a></li>
      </ul>
    </div>
  </div>

<div class="row">
  <div class="col-md-4">

    <h2>Cozinhas</h2>
    <div id='cozinhas'>
      <% @cuisines.each do |c| %>
        <%= link_to c.kind, c  %>
      <% end %>
    </div>

    <h2>Tipos</h2>
    <div id='food_type'>
      <% @food_type.each do |f| %>
        <%= link_to f.name, f  %>
      <% end %>
    </div>

  </div>
  <div class="col-md-4">
     <h2>Últimas Receitas</h2>
    <dl>
      <% @recipes_top_20.each do |r| %>
          <dd><%= r.name %></dd>
        <dt>Cozinha</dt>
          <dd><%= r.cuisine.kind %></dd>
            <dt>Nível de dificuldade</dt>
          <dd><%= r.recipe_difficulty.level %></dd>
                <dt>Imagem</dt>
            <dd><%= image_tag r.picture.url %></dd>
          <%# end %>
      <% end %>
    </dl>

  </div>
  <div class="col-md-4">
    <h2>Receitas Favoritadas</h2>
    <dl>
      <% @recipes_top_20.each do |r| %>
          <dd><%= r.name %></dd>
        <dt>Cozinha</dt>
          <dd><%= r.cuisine.kind %></dd>
            <dt>Nível de dificuldade</dt>
          <dd><%= r.recipe_difficulty.level %></dd>
                <dt>Imagem</dt>
            <dd><%= image_tag r.picture.url %></dd>
          <%# end %>
      <% end %>
    </dl>
  </div>
</div>
